{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <h1 class="texte"> Modifier un événement</h1>

    {{ form_start(modifier_evenement_form) }}

<div class="marginTop">
    <div class="webflow-style-input" id="event">
        {{ form_widget(modifier_evenement_form.name, {'attr': {'placeholder': 'Nom de l\'événement'}}) }}
        {{ form_errors(modifier_evenement_form.name) }}
    </div>
    <br/>
</div>


    <div id="points">
        <div class="webflow-style-input" id="points">
        {{ form_widget(modifier_evenement_form.nbPoints, {'attr': {'placeholder': 'Nombre de points de l événement'}}) }}
        {{ form_errors(modifier_evenement_form.nbPoints) }}
        </div>
    </div>
    <br/>

    <div class="marginTop">
        {{ form_row(modifier_evenement_form.modifier_evenement, {'attr': {'class': 'glow-on-hover buttonSizeStandard'}}) }}
    </div>
    <br/>
    {{ form_end(modifier_evenement_form) }}

    <form method="post" action="{{ path('admin_supprimer_evenement', {"id": event.id}) }}">
        <div class="marginTop">
            <input class="buttonSizeStandard glow-on-hover" type="submit" name="supprimer" value="Supprimer l'evenement" onclick="ask()"/>
        </div>
    </form>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" src="{{ asset('javascript/script.js') }}"></script>
{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/input.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/scrolldown.css') }}">
    <link rel="stylesheet" href="{{ asset('css/buttonStyle.css') }}">


{% endblock %}