{% extends 'base.html.twig' %}

{% block title %}Hello AthleteController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    {{ dump(athletesFromClub) }}

    <select name="athlete">
        <option value="">--Choisissez un athlete--</option>
        {% for athlete in athletesFromClub %}
            <option value="{{ athlete.id }}"> {{ athlete.getFirstName() }} </option>
        {% endfor %}
    </select>

{% endblock %}