        <select name="laCat">
            {% for cat in allCats %}
                <option value="{{ cat.id }}"> {{ cat.getLongName() }} </option>
            {% endfor %}
        </select>
    </div>

    <div class="marginTop3">
        <button class="glow-on-hover buttonSize" type="submit">
