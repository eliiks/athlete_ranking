{% extends 'base.html.twig' %}

{% block title %}Hello AthleteController!{% endblock %}

{% block body %}


    <form method="post" action="{{ path("athlete_dataRechercheAthleteAction", {"clubId":clubId}) }} ">

        <div class="marginTop">
            <h3 class="texte">Entrez le nom de l'athlète</h3>

            <div class="webflow-style-input">
                <input type="text" id="nom" name="nom" required>
            </div>
        </div>


        <div class="marginTop">
            <h3 class="texte">Entrez le prénom de l'athlète</h3>

            <div class="webflow-style-input">
                <input type="text" id="prenom" name="prenom" required>
            </div>
        </div>



        <div class="marginTop2">
            <button class="glow-on-hover buttonSize" type="submit">
                Valider
            </button>
        </div>

    </form>



{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/input.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/buttonStyle.css') }}">
    <link rel="stylesheet" href="{{ asset('css/selectionClub.css') }}">


{% endblock %}

