{% extends 'base.html.twig' %}

{% block title %}Hello AthleteController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<form method="post" action="{{ path("athlete_recherche") }} ">
    <select name="leclub">
        <option value="">--Choisissez un club--</option>
        {% for club in clubs %}
        <option value="{{ club.id }}"> {{ club.name }} </option>
        {% endfor %}
    </select>
    <input type="submit" value="Valider"/>
</form>

{% endblock %}
